{
  "name": "finalproject",
  "version": "1.0.0",
  "description": "Gift Exchange / Secret Santa Generator",
  "main": "server.js",
  "scripts": {
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build",
    "build": "cd client && npm run build",
    "start": "if-env NODE_ENV=production && npm run prod || npm run dev",
    "prod": "node server.js",
    "dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start"
  },
  "engines": {
    "node": "v10.11.0",
    "npm": "6.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BethGmariam/FinalProject.git"
  },
  "author": "Beth, Chriscelle, Mel, Zachary",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BethGmariam/FinalProject/issues"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "connect-mongo": "^2.0.1",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "mongoose": "^5.3.9",
    "mongoose-bcrypt": "^1.6.0",
    "mongoose-type-email": "^1.0.9",
    "path": "^0.12.7",
    "personality-text-summary": "^2.2.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.83.0",
    "watson-developer-cloud": "^3.13.0",
    "if-env": "^1.0.4"

  },
  "devDependencies": {
    "nodemon": "^1.18.4"
  },
  "keywords": [
    "express",
    "node",
    "mongo",
    "react",
    "create",
    "read",
    "update",
    "delete"
  ]
}
